#include "shell.h"

char *find_executable(char *command)
{
char *path_env = getenv("PATH");
char *path = strtok(path_env, ":");
char *full_path = malloc(MAX_PATH_LENGTH);

while (path != NULL)
{
full_path[0] = '\0';

strcat(full_path, path);
strcat(full_path, "/");
strcat(full_path, command);

if (access(full_path, X_OK) == 0)
{
return full_path;
}

path = strtok(NULL, ":");
}

free(full_path);
return NULL;
}
